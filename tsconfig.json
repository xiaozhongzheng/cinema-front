{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": [
    "node_modules", // 必排除：第三方依赖无需 TS 解析
    "dist", // 必排除：构建产物
    "public", // 必排除：静态资源（如图片、HTML）
    "**/node_modules/*",
    "**/dist/*",
  ]
}
